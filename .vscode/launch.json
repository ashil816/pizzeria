    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET 9 Console App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Pizzeria.App/bin/Debug/net9.0/Pizzeria.App.dll",
            "args": [
               "${workspaceFolder}/src/Pizzeria.App/Data/orders.json",
                "${workspaceFolder}/src/Pizzeria.App/Data/Products.json",
